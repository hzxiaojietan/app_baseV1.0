<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/relativelayout_top_header"
        android:layout_width="match_parent"
        android:layout_height="49.5dp">
        <RelativeLayout
            android:id="@+id/top_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/color7"
                android:src="@drawable/icon_back"/>

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="左标题"
                android:textColor="@color/color7"
                android:textSize="16dip" />

        </RelativeLayout>

        <TextView
            android:id="@+id/top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="@dimen/navigation_title"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/color1"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/top_action_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:paddingRight="16dp"
            android:textColor="@color/color7"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/img_title_right"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:tint="@color/color7"
            android:src="@drawable/icon_back"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <include
        android:id="@+id/view_separator2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/relativelayout_top_header"
        layout="@layout/separator_line"></include>

</RelativeLayout>
